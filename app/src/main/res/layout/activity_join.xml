<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".JoinActivity">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgbtn_board"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00FF0000"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_assignment_black_24dp" />

        <Button
            android:id="@+id/btn_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="#00FF0000"
            android:text="신청방청"
            android:fontFamily="@font/font_bold"
            android:textAlignment="center"
            android:textColor="#C0D9FA"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgbtn_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#00FF0000"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_search_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/member_join"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:text="Join"
            android:textColor="@color/title"
            android:fontFamily="@font/font_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/join_id"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/member_join"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:background="@drawable/button"
            android:fontFamily="@font/font_bold"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="아이디"
            android:textColor="#fff"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_id"
            android:layout_width="0dp"
            android:layout_weight="5.5"
            android:layout_height="60dp"
            android:background="@drawable/back"
            android:textColorHint="@color/title">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_id"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:background="@color/title"
            android:fontFamily="@font/font_bold"
            android:layout_marginTop="10dp"
            android:text="중복확인"
            android:textColor="#fff"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_pass"
        app:layout_constraintTop_toBottomOf="@+id/join_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:background="@drawable/button"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_bold"
            android:text="비밀번호"
            android:textColor="#fff"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="5.5"
            android:layout_height="60dp"
            android:background="@drawable/back"
            android:textColorHint="@color/title">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="match_parent"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_pass_check"
        app:layout_constraintTop_toBottomOf="@+id/join_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:fontFamily="@font/font_bold"
            android:text="비밀번호 확인"
            android:textColor="#fff"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="5.5"
            android:layout_height="60dp"
            android:background="@drawable/back"
            android:textColorHint="@color/title">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="match_parent"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_nick"
        app:layout_constraintTop_toBottomOf="@+id/join_pass_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2.5"
            android:background="@drawable/button"
            android:gravity="center"
            android:fontFamily="@font/font_bold"
            android:text="닉네임"
            android:textColor="#fff"
            android:textSize="15sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="5.5"
            android:layout_height="60dp"
            android:background="@drawable/back"
            android:textColorHint="@color/title">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="match_parent"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_gender"
        app:layout_constraintTop_toBottomOf="@+id/join_nick"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:background="@drawable/button"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:fontFamily="@font/font_bold"
            android:text="성별"
            android:textColor="#fff"
            android:textSize="15sp" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/man"
                android:text="남"
                android:checked="true"
                android:layout_weight="1"
                android:fontFamily="@font/font_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/woman"
                android:text="여"
                android:layout_weight="1"
                android:fontFamily="@font/font_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/join_age"
        app:layout_constraintTop_toBottomOf="@+id/join_gender"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.5"
            android:background="@drawable/button"
            android:gravity="center"
            android:fontFamily="@font/font_bold"
            android:text="연령"
            android:textColor="#fff"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/join_age_spin"
            android:entries="@array/age_spin"
            android:layout_gravity="center"
            android:layout_weight="5.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>


    <Button
        app:layout_constraintTop_toBottomOf="@+id/join_age"
        app:layout_constraintRight_toRightOf="parent"
        android:text="가입신청"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_gravity="right"
        android:fontFamily="@font/font_bold"
        android:textColor="#fff"
        android:background="@drawable/button"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:itemIconTint="@color/bottom_navi_select"
        app:itemTextColor="@color/bottom_navi_select"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>